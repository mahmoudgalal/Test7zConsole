<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aroma.zeearchiver"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="preferExternal">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/zeearchiver"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" android:largeHeap="true">
        <activity
            android:name="com.aroma.zeearchiver.MainActivity"
            android:label="@string/title_activity_extract" android:configChanges="keyboard|orientation" android:screenOrientation="portrait">
           <!--  <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>  -->
        </activity>
        <activity
            android:name="com.aroma.zeearchiver.FileBrowserActivity"
            android:label="@string/title_activity_file_browser"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:configChanges="keyboard|orientation" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.aroma.zeearchiver.InfoActivity"
            android:label="@string/title_activity_info" android:configChanges="keyboard|orientation" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.aroma.zeearchiver.CompressActivity"
            android:label="@string/title_activity_compress" android:configChanges="keyboard|orientation" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.aroma.zeearchiver.StartupActivity"
            android:label="@string/title_activity_startup" android:configChanges="keyboard|orientation" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
